{
  "openapi": "3.0.3",
  "info": {
    "title": "BBB Elections",
    "contact": {
      "email": "raphaelbarbosa.rodrigues@gmail.com"
    }
  },
  "tags": [
    {
      "name": "Elections",
      "description": "BBB Elections"
    },
    {
      "name": "Participants",
      "description": "BBB Participants"
    }
  ],
  "paths": {
    "/elections": {
      "get": {
        "tags": [
          "Elections"
        ],
        "summary": "Info about the current election",
        "description": "Info about the current election",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "description": "Id of the current election",
                      "type": "integer",
                      "example": 1
                    },
                    "remainingTime": {
                      "type": "integer",
                      "description": "Remaining time in timestamp format",
                      "example": "1690146430886"
                    },
                    "participants": {
                      "type": "array",
                      "items": {
                        "oneOf": [
                          {
                            "$ref": "#components/schemas/FirstParticipant"
                          },
                          {
                            "$ref": "#components/schemas/SecondParticipant"
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "default": "internal server error",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/elections/vote": {
      "post": {
        "tags": [
          "Elections"
        ],
        "summary": "register a vote on the current election",
        "description": "register a vote on the current election",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "partipantId": {
                    "type": "integer",
                    "default": 3
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "voteId": {
                      "type": "integer",
                      "example": "215"
                    },
                    "message": {
                      "type": "string",
                      "default": "vote computed"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FirstParticipant": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Participant id",
            "default": 1
          },
          "name": {
            "type": "string",
            "description": "Participant name",
            "default": "Raphael Barbosa Rodrigues"
          },
          "votes": {
            "type": "integer",
            "description": "Votes quantity",
            "default": "15231"
          },
          "imageUrl": {
            "type": "string",
            "description": "Url of participant image",
            "default": "https://avatars.githubusercontent.com/u/42044496?v=4"
          }
        }
      },
      "SecondParticipant": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Participant id",
            "default": 1
          },
          "name": {
            "type": "string",
            "description": "Participant name",
            "default": "Barbosa Raphael Rodrigues"
          },
          "votes": {
            "type": "integer",
            "description": "Votes quantity",
            "default": "5231"
          },
          "imageUrl": {
            "type": "string",
            "description": "Url of participant image",
            "default": "https://avatars.githubusercontent.com/u/42044496?v=4"
          }
        }
      }
    }
  },
  "$schema": "https://spec.openapis.org/oas/3.0/schema/2021-09-28"
}